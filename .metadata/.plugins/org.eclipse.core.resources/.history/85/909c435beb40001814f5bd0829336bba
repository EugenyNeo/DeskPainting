package MyVecorDraw;

import java.awt.BasicStroke;
import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.geom.RoundRectangle2D;

public class PRoundRect implements IShape
{
	int x, y, x1, y1;
	int width;
	int clr;
	String type = "RoundRect";
	
	
	public PRoundRect( int x, int y, int x1, int y1, Color clr, int w)
	{
		this.x = x;
		this.y = y;
		this.x1 = x1;
		this.y1 = y1;
		this.clr = clr;
		this.width = width;
	}
	@Override
	public void draw ( Graphics2D gg)
	{
		gg.setColor(new Color(clr));
		gg.setStroke(new BasicStroke(width));
		if ((x1 < x && y > y1 ) || (x < x1 && y > y1))
		{
			int xd = x;
			x = x1;
			x1 = xd;
			
			xd = y ;
			y = y1;
			y1 = xd;
		}
		else
		if (x1 < x && y < y1) 
				{
					int yd = y;
					y = y1;
					y1 = yd;

				}
		gg.draw(new RoundRectangle2D.Float(x, y,  x1 - x, y1 - y, 50, 30));
	}

}
